@model GestaoObras.Models.Material

@{
    ViewData["Title"] = "Editar Material";
}

<div class="alert alert-primary d-flex align-items-start mb-4">
    <i class="bi bi-pencil-square fs-4 me-3"></i>
    <div>
        <h5 class="fw-bold mb-1">Editar Material</h5>
        <small class="text-muted">Atualize as informações deste material.</small>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">

                <h5 class="fw-bold mb-3">
                    <i class="bi bi-archive me-2 text-primary"></i>
                    Dados do Material
                </h5>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StockDisponivel" class="form-label"></label>
                        <input asp-for="StockDisponivel" class="form-control" />
                        <span asp-validation-for="StockDisponivel" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-save"></i> Guardar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
