@model GestaoObras.Models.Material

@{
    ViewData["Title"] = "Detalhes do Material";
}

<div class="alert alert-info d-flex align-items-start mb-4">
    <i class="bi bi-box-seam fs-4 me-3"></i>
    <div>
        <h5 class="fw-bold mb-1">Detalhes do Material</h5>
        <small class="text-muted">Informações completas deste material.</small>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">

        <h5 class="fw-bold mb-3">
            <i class="bi bi-archive me-2 text-primary"></i>
            Informação do Material
        </h5>

        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3 text-muted">Descrição</dt>
            <dd class="col-sm-9">
                @(!string.IsNullOrEmpty(Model.Descricao) ? Model.Descricao : "-")
            </dd>

            <dt class="col-sm-3 text-muted">Stock Disponível</dt>
            <dd class="col-sm-9">@Model.StockDisponivel</dd>
        </dl>

    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
        <i class="bi bi-pencil-square"></i> Editar
    </a>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>
