@model GestaoObras.Models.Material

@{
    ViewData["Title"] = "Criar Material";
}

<div class="alert alert-success d-flex align-items-start mb-4">
    <i class="bi bi-box-seam fs-4 me-3"></i>
    <div>
        <h5 class="fw-bold mb-1">Criar Novo Material</h5>
        <small class="text-muted">Preencha os dados para registar um novo material.</small>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">

                <h5 class="fw-bold mb-3">
                    <i class="bi bi-archive me-2 text-success"></i>
                    Dados do Material
                </h5>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <textarea asp-for="Descricao" class="form-control"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StockDisponivel" class="form-label"></label>
                        <input asp-for="StockDisponivel" class="form-control" min="0" />
                        <span asp-validation-for="StockDisponivel" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-check-circle"></i> Criar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
