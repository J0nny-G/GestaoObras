@model GestaoObras.Models.Material

@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-success d-flex align-items-start">
    <i class="bi bi-plus-circle fs-4 me-3"></i>
    <div>
        <h5 class="fw-bold mb-1">Criar Novo Material</h5>
        <small class="text-muted">Preencha os dados para registar um novo material.</small>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockDisponivel" class="control-label"></label>
                <input asp-for="StockDisponivel" class="form-control" />
                <span asp-validation-for="StockDisponivel" class="text-danger"></span>
            </div>
                       <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-check-circle"></i> Criar
                </button>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
