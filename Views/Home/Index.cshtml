@{
    ViewData["Title"] = "Gestão de Obras";
}

<h2 class="mb-4">🏗️ Painel de Controlo</h2>

<div class="row text-center mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-success">
            <div class="card-body">
                <h5 class="card-title text-success">Obras Ativas</h5>
                <h2>@ViewBag.ObrasAtivas</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-primary">
            <div class="card-body">
                <h5 class="card-title text-primary">Total de Obras</h5>
                <h2>@ViewBag.TotalObras</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-warning">
            <div class="card-body">
                <h5 class="card-title text-warning">Clientes</h5>
                <h2>@ViewBag.TotalClientes</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <h5 class="card-title text-danger">Materiais</h5>
                <h2>@ViewBag.TotalMateriais</h2>
            </div>
        </div>
    </div>
</div>

<hr />

<h4>📦 Últimos Movimentos de Stock</h4>

<table class="table table-striped table-bordered table-sm mt-3">
    <thead class="table-light">
        <tr>
            <th>Data</th>
            <th>Obra</th>
            <th>Material</th>
            <th>Operação</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.MovimentosRecentes != null && ((IEnumerable<dynamic>)ViewBag.MovimentosRecentes).Any())
        {
            foreach (var mov in ViewBag.MovimentosRecentes)
            {
                <tr>
                    <td>@mov.DataOperacao.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@mov.Obra?.Nome</td>
                    <td>@mov.Material?.Nome</td>
                    <td>
                        @if (mov.Operacao == "REMOVE")
                        {
                            <span class="text-danger fw-bold">- REMOVE</span>
                        }
                        else
                        {
                            <span class="text-success fw-bold">+ ADD</span>
                        }
                    </td>
                    <td>@mov.Quantidade</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center text-muted">Nenhum movimento registado.</td></tr>
        }
    </tbody>
</table>
