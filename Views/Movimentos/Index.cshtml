@model IEnumerable<GestaoObras.Models.MovimentoStock>

@{
    ViewData["Title"] = "Movimentos de Stock";
}

<h2>ðŸ“¦ Movimentos de Stock</h2>

<p class="text-muted">Consulta e filtragem dos movimentos de materiais registados nas obras.</p>

<!-- ðŸ” Filtro -->
<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label">Selecionar Obra</label>
            <select class="form-select" name="obraId" onchange="this.form.submit()">
                <option value="">-- Todas as Obras --</option>
                @foreach (var obra in (SelectList)ViewBag.Obras)
                {
                    @if (obra.Value == Context.Request.Query["obraId"])
                    {
                        <option value="@obra.Value" selected>@obra.Text</option>
                    }
                    else
                    {
                        <option value="@obra.Value">@obra.Text</option>
                    }
                }
            </select>
        </div>
    </div>
</form>

<!-- ðŸ“‹ Tabela de Movimentos -->
<table class="table table-striped table-bordered table-sm">
    <thead class="table-light">
        <tr>
            <th>Obra</th>
            <th>Cliente</th>
            <th>Material</th>
            <th>OperaÃ§Ã£o</th>
            <th>Quantidade</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var mov in Model)
            {
                <tr>
                    <td>@mov.Obra?.Nome</td>
                    <td>@mov.Obra?.Cliente?.Nome</td>
                    <td>@mov.Material?.Nome</td>
                    <td>
                        @if (mov.Operacao == "REMOVE")
                        {
                            <span class="text-danger fw-bold">- REMOVE</span>
                        }
                        else
                        {
                            <span class="text-success fw-bold">+ ADD</span>
                        }
                    </td>
                    <td>@mov.Quantidade</td>
                    <td>@mov.DataOperacao.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Nenhum movimento encontrado.</td>
            </tr>
        }
    </tbody>
</table>
