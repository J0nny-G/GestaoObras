<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestão de Obras</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestaoObras.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <div id="app-wrapper" class="d-flex">
        <!-- 🔹 SIDEBAR LATERAL -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header px-3 py-3 border-bottom border-secondary d-flex align-items-center justify-content-between">
                <div>
                    <span class="fw-bold">Gestão de Obras</span><br />
                    <small class="text-secondary">Painel de Administração</small>
                </div>
                <span class="d-md-none" id="sidebar-close" role="button">
                    <i class="bi bi-x-lg"></i>
                </span>
            </div>

            <div class="px-2 py-3">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white sidebar-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-speedometer2 me-2"></i> Início
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white sidebar-link" asp-area="" asp-controller="Clientes" asp-action="Index">
                            <i class="bi bi-people me-2"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white sidebar-link" asp-area="" asp-controller="Materiais" asp-action="Index">
                            <i class="bi bi-box-seam me-2"></i> Materiais
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white sidebar-link" asp-area="" asp-controller="Obras" asp-action="Index">
                            <i class="bi bi-building-gear me-2"></i> Obras
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white sidebar-link" asp-area="" asp-controller="Movimentos" asp-action="Index">
                            <i class="bi bi-arrow-left-right me-2"></i> Movimentos
                        </a>
                    </li>
                    <li class="nav-item mt-2">
                        <a class="nav-link text-white-50 sidebar-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-info-circle me-2"></i> Sobre
                        </a>
                    </li>
                </ul>
            </div>

            <div class="sidebar-footer text-center text-secondary small py-3 border-top border-secondary mt-auto">
                &copy; João Gonçalves 28247
            </div>
        </nav>

        <!-- 🔹 CONTENT AREA -->
        <div id="page-content" class="flex-grow-1 d-flex flex-column min-vh-100">
            <!-- TOPBAR -->
            <header class="topbar bg-white border-bottom px-3 py-2 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-outline-secondary btn-sm d-md-none" id="sidebar-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
                <small class="text-muted d-none d-sm-inline">
                    @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </small>
            </header>

            <!-- MAIN CONTENT -->
            <main role="main" class="flex-grow-1 p-3 p-md-4">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="border-top text-muted small py-2 px-3 mt-auto bg-white">
                <div class="d-flex justify-content-between">
                    <span>&copy; 2025 - GestaoObras</span>
                </div>
            </footer>
        </div>
    </div>

    <!-- ✅ ORDEM CORRETA DE SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- ✅ Patch para aceitar vírgulas e pontos -->
    <script>
        jQuery.extend(jQuery.validator.methods, {
            number: function (value, element) {
                return this.optional(element) || /^-?\d+([,\.]\d+)?$/.test(value);
            }
        });

        // 🔁 Forçar revalidação visual sempre que o utilizador muda algo
        $('form').on('change keyup', 'input', function () {
            $(this).valid();
        });

        // 🔹 Toggle do sidebar em ecrãs pequenos
        $(function () {
            $('#sidebar-toggle').on('click', function () {
                $('#sidebar').addClass('sidebar-open');
            });
            $('#sidebar-close').on('click', function () {
                $('#sidebar').removeClass('sidebar-open');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
