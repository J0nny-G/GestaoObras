@model GestaoObras.Models.Obra

@{
    ViewData["Title"] = "Detalhes da Obra";
}

<div class="alert alert-info d-flex align-items-start">
    <i class="bi bi-info-circle fs-4 me-3"></i>
    <div>
        <h5 class="fw-bold mb-1">Detalhes da obra</h5>
        <small class="text-muted">InformaÃ§Ãµes completas desta obra.</small>
    </div>
</div>

<h2 class="mb-3">@Model.Nome</h2>

<ul class="nav nav-tabs" id="obraTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="dados-tab" data-bs-toggle="tab" data-bs-target="#dados" type="button" role="tab">
            Dados Gerais
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="materiais-tab" data-bs-toggle="tab" data-bs-target="#materiais" type="button" role="tab">
            Registo de Material
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="mao-tab" data-bs-toggle="tab" data-bs-target="#mao" type="button" role="tab">
            Registo de MÃ£o de Obra
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pagamentos-tab" data-bs-toggle="tab" data-bs-target="#pagamentos" type="button" role="tab">
            Registo de Pagamentos
        </button>
    </li>
</ul>

<div class="tab-content mt-3" id="obraTabsContent">

    <!-- ðŸ§¾ Aba: Dados Gerais -->
    <div class="tab-pane fade show active" id="dados" role="tabpanel">
        <h4>ðŸ“‹ Dados Gerais</h4>
        <dl class="row">
            <dt class="col-sm-2">DescriÃ§Ã£o:</dt>
            <dd class="col-sm-4">@Model.Descricao</dd>

            <dt class="col-sm-2">Morada:</dt>
            <dd class="col-sm-4">@Model.Morada</dd>

            <dt class="col-sm-2">Cliente:</dt>
            <dd class="col-sm-4">@Model.Cliente?.Nome</dd>

            <dt class="col-sm-2">Ativa:</dt>
            <dd class="col-sm-4">@(Model.Ativa ? "Sim" : "NÃ£o")</dd>
        </dl>

        <hr />

        <!-- ðŸ§± Materiais Utilizados -->
        <h5>ðŸ§± Materiais Utilizados</h5>
        @if (Model.Materiais != null && Model.Materiais.Any())
        {
            <table class="table table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Material</th>
                        <th>Quantidade</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.Materiais)
                    {
                        <tr>
                            <td>@m.Material?.Nome</td>
                            <td>@m.Quantidade</td>
                            <td>@m.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Sem materiais registados.</p>
        }

        <hr />

        <!-- ðŸ‘· Registos de MÃ£o de Obra -->
        <h5>ðŸ‘· Registos de MÃ£o de Obra</h5>
        @if (Model.MaoDeObra != null && Model.MaoDeObra.Any())
        {
            <table class="table table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Horas</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model.MaoDeObra)
                    {
                        <tr>
                            <td>@o.Pessoa</td>
                            <td>@o.HorasTrabalhadas</td>
                            <td>@o.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Sem registos de mÃ£o de obra.</p>
        }

        <hr />

        <!-- ðŸ’¶ Pagamentos Efetuados -->
        <h5>ðŸ’¶ Pagamentos Efetuados</h5>
        @if (Model.Pagamentos != null && Model.Pagamentos.Any())
        {
            <table class="table table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Valor (â‚¬)</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Pagamentos)
                    {
                        <tr>
                            <td>@p.Pessoa</td>
                            <td>@p.Valor</td>
                            <td>@p.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Sem pagamentos registados.</p>
        }
    </div>

    <!-- ðŸ§± Aba Registo de Material -->
    <div class="tab-pane fade" id="materiais" role="tabpanel">

        <!-- Mensagens de erro / sucesso (TempData) -->
        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger d-flex align-items-center">
                <i class="bi bi-x-circle fs-5 me-2"></i>
                @TempData["Erro"]
            </div>
        }

        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success d-flex align-items-center">
                <i class="bi bi-check-circle fs-5 me-2"></i>
                @TempData["Sucesso"]
            </div>
        }

        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">

                <h5 class="fw-bold mb-3">
                    <i class="bi bi-plus-circle me-2 text-primary"></i>
                    Adicionar Material Ã  Obra
                </h5>

                <form asp-controller="Obras" asp-action="AdicionarMaterial" method="post">
                    <input type="hidden" name="ObraId" value="@Model.Id" />

                    <!-- SELECT Material -->
                    <div class="mb-3">
                        <label class="form-label">Material</label>
                        <select class="form-select" name="MaterialId" required>
                            <option value="" disabled selected>Selecione um material...</option>

                            @foreach (var material in ViewBag.Materiais)
                            {
                                <option value="@material.Id"
                                        disabled="@(material.StockDisponivel == 0 ? "disabled" : null)">
                                    @material.Nome (@material.StockDisponivel disponÃ­veis)
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Campo Quantidade -->
                    <div class="mb-3">
                        <label class="form-label">Quantidade</label>
                        <input type="number"
                               class="form-control"
                               name="Quantidade"
                               min="1"
                               required />
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Adicionar Material
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- ðŸ‘· Aba Registo de MÃ£o de Obra -->
    <div class="tab-pane fade" id="mao" role="tabpanel">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-people-fill me-2 text-primary"></i>
                    Registar MÃ£o de Obra
                </h5>

                <form asp-controller="Obras" asp-action="AdicionarMaoDeObra" method="post">
                    <input type="hidden" name="ObraId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Nome da Pessoa</label>
                        <input type="text" class="form-control" name="Pessoa" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Horas Trabalhadas</label>
                        <input type="number" class="form-control" name="HorasTrabalhadas" min="0.1" step="0.1" required />
                    </div>

                    <button type="submit" class="btn btn-primary">Registar MÃ£o de Obra</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ðŸ’¶ Aba Registo de Pagamentos -->
    <div class="tab-pane fade" id="pagamentos" role="tabpanel">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-cash-coin me-2 text-success"></i>
                    Registar Pagamento
                </h5>

                <form asp-controller="Obras" asp-action="AdicionarPagamento" method="post" class="mb-4">
                    <input type="hidden" name="ObraId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Nome da Pessoa</label>
                        <input type="text" class="form-control" name="Pessoa" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Valor (â‚¬)</label>
                        <input type="number" step="0.01" class="form-control" name="Valor" min="0.01" required />
                    </div>

                    <button type="submit" class="btn btn-success">Adicionar Pagamento</button>
                </form>
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const hash = window.location.hash;
            if (!hash) return;

            // Procurar o botÃ£o da tab correspondente ao hash (#materiais, #mao, #pagamentos, etc.)
            const tabTrigger = document.querySelector(
                `#obraTabs button[data-bs-toggle="tab"][data-bs-target="${hash}"]`
            );

            if (tabTrigger) {
                const tab = new bootstrap.Tab(tabTrigger);
                tab.show();
            }
        });
    </script>
}
