@model IEnumerable<GestaoObras.Models.Obra>

@{
    ViewData["Title"] = "Obras";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="fw-bold mb-0">
            <i class="bi bi-building me-2 text-primary"></i> Obras
        </h3>
        <small class="text-muted">Gestão de todas as obras registadas.</small>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nova Obra
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">

        @if (!Model.Any())
        {
            <p class="text-muted mb-0">Ainda não existem obras registadas.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th style="width: 30%;">Descrição</th>
                            <th>Cliente</th>
                            <th class="text-center">Estado</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Nome da Obra -->
                            <td class="fw-semibold">
                                @item.Nome
                            </td>

                            <!-- Descrição curta -->
                            <td class="text-muted">
                                @if (!string.IsNullOrWhiteSpace(item.Descricao) && item.Descricao!.Length > 60)
                                {
                                    @(item.Descricao.Substring(0, 60) + "...")
                                }
                                else
                                {
                                    @item.Descricao
                                }
                            </td>

                            <!-- Cliente -->
                            <td>
                                @item.Cliente?.Nome
                            </td>

                            <!-- Estado -->
                            <td class="text-center">
                                @(item.Ativa ? "Ativa" : "Inativa")
                            </td>

                            <!-- Ações -->
                            <td class="text-end text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left"></i> Voltar à Página Inicial
</a>
